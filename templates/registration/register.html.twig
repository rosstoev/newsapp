{% extends 'base.html.twig' %}
{% form_theme registrationForm "bootstrap_4_layout.html.twig" %}
{% block title %}Register{% endblock %}

{% block body %}
    <h1>Регистрация</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {'label': 'Потребител'}) }}
        {{ form_row(registrationForm.plainPassword, {'label': 'Парола'}) }}
        {{ form_row(registrationForm.fullName, {'label': 'Пълно Име'}) }}
        <button class="btn btn-lg btn-primary">Регистрирай</button>
    {{ form_end(registrationForm) }}
{% endblock %}
