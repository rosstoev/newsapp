            <a href="{{ path('app_logout') }}">Излез</a>
            {% else %}
            <a href="{{ path('app_register') }}">Регистрация</a>
            <br>
            <a href="{{ path('app_login') }}">Влез</a>
        {% endif %}
    {% endblock %}
{% endblock %}


